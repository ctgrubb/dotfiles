#!/bin/sh

if [ "$HOSTNAME" = hertz ]; then 
  cl() {
    cd ~/Documents/Classwork/classlib/"$1"
  }
  hm() {
    cd ~/Documents/Classwork/classlib/hm/"$1"
  }
  rsm() {
    cd ~/Documents/Classwork/classlib/rsm/"$1"
  }
  mcmc() {
    cd ~/Documents/Classwork/classlib/mcmc/"$1"
  }
  he() {
    cd ~/Documents/Research/heatexposure/"$1"
  }
  hed() {
    cd ~/Storage/heatexposure/"$1"
  }
  sm() {
    cd ~/Documents/Research/surfacemining/"$1"
  }
  smd() {
    cd ~/Storage/surfacemining/"$1"
  }
elif [ "$HOSTNAME" = broce ]; then
  cl() {
    cd ~/git-repos/classlib/"$1"
  }
  hm() {
    cd ~/git-repos/classlib/hm/"$1"
  }
  rsm() {
    cd ~/git-repos/classlib/rsm/"$1"
  }
  mcmc() {
    cd ~/git-repos/classlib/mcmc/"$1"
  }
  he() {
    cd ~/git-repos/heatexposure/"$1"
  }
  hed() {
    cd /storage/chris/heatexposure/"$1"
  }
  sm() {
    cd ~/git-repos/surfacemining/"$1"
  }
  smd() {
    cd /storage/chris/surfacemining/"$1"
  }
fi
